<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardElevation="8dp"
    android:layout_margin="8dp"
    android:layout_height="wrap_content"
    tools:context=".AllNoticeBoardAdapter">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="2dp"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#000"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="3dp"
            android:marqueeRepeatLimit="marquee_forever"
            android:textSize="17sp"
            android:text="Welcome to JIS College Of Engineering Admission"
            android:id="@+id/subjectTextView"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="3dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:text="Dept : "
                android:textColor="#000"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CSE"
                android:id="@+id/deptTextView"
                android:textSize="16sp"
                android:textColor="#000"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:text="Please Fill Up The Form its Mandatory link provided below"
            android:textColor="#000"
            android:id="@+id/textTextView"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="3dp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="3dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="#000"
                android:textSize="16sp"
                android:text="Link :"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                android:layout_marginStart="2dp"
                android:textColor="#0026FF"
                android:id="@+id/linkTxt"
                android:text="NA"
                android:layout_height="wrap_content" />

        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>